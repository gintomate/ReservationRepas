{% extends 'base.html.twig' %} {% block title %}Réservation de Repas{% endblock
%} {% block importmap %} {{ importmap(["app", "userConsultation"]) }}{% endblock
%}{% block body %} {% include "nav/UserNav.html.twig" %}
<main>
  <h1>Consulter mes Réservations</h1>
  {% for message in app.flashes('success') %}
  <div role="alert" class="alert alert-success text-center">
    {{ message }}
  </div>
  {% endfor %}
  <div id="semaineContainer" ->
    <label for="semaine"
      >Consulter ma Réservation pour la Semaine suivante:
    </label>
    <select name="semaine" id="semaine"></select>
  </div>
  <div class="d-flex flex-sm-row flex-column justify-content-evenly flex-wrap">
    <div class="cardMenu">
      <h3>Lundi</h3>
      <div id="Monday"></div>
    </div>
    <div class="cardMenu">
      <h3>Mardi</h3>
      <div id="Tuesday"></div>
    </div>
    <div class="cardMenu">
      <h3>Mercredi</h3>
      <div id="Wednesday"></div>
    </div>
    <div class="cardMenu">
      <h3>Jeudi</h3>
      <div id="Thursday"></div>
    </div>
    <div class="cardMenu">
      <h3>Vendredi</h3>
      <div id="Friday"></div>
    </div>
  </div>
  <div
    class="d-flex flex-sm-row flex-column justify-content-between align-items-center"
    id="bottomBar"
  >
    <div id="montantContainer">
      Total:
      <input type="text" class="text-end" id="montant" value="0" disabled />
    </div>
    <div class="text-end">
      <button type="button" class="btnCreer" id="btnValider">Modifier</button>
      <button type="button" class="btnCreer">Supprimer</button>
    </div>
  </div>
</main>

{% include "nav/footer.html.twig" %} {% endblock %}
